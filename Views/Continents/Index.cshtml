@model IEnumerable<Ballerz.Football.Ballerz.Knowledgebase.Knowledgebase.Data.Continents>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
       #continents {
           margin-top: 3em;
           
       }
       .container {
  position: relative;
  width: 100%;
}

.image {
  display: block;
  width: 100%;
  height: auto;
}

.overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: .5s ease;
  background-color: #008CBA;
}

.container:hover .overlay {
  opacity: 0.7;
}
.image {
  opacity: 0.5;
}
.image:hover {
  opacity: 2;
  transition: 0.7s;
}

.text {
  color: black;
  font-size: 25px;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  text-align: center;
}
    </style>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row" style="margin-top: 5%;">

@foreach (var item in Model) 
{
    <div class="col-md-4 text-center" id="continents" style="padding: 2%;">  
      <div class="container">
          <h4 style="color: black; background-color: white; padding: 10px;"><strong>@item.ContinentName</strong></h4> 
      <a asp-controller="Countries" asp-action="ContCountries" asp-route-id="@item.Id"><img src="@item.ContinentImageUrl"
       class="image" style="width: 90%; border-radius: 25px;" title="Countries in @item.ContinentName" />
       
  </a>
  </div>
          
     </div>   
}

    
</div>
</body>
</html>
