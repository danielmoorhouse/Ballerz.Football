@model Ballerz.Football.Ballerz.Web.Models.Countries.CountryIndexModel

<div class="container-fluid">
  <h2>Countries in @ViewBag.ContinentName</h2>
<div class="row">
@foreach(var country in Model.CountriesList)
{
    <div class="col-md-3 text-center" style="margin-bottom: 3em; border-bottom: 1px solid white;" >
  <img src="@country.FlagUrl" class="flagImg" style="width: 70%; height: 125px; padding-top: 20px; padding-bottom: 20px;" />
  
  <h2 style="padding-bottom: 10px; color: black;"><strong>@country.Name</strong></h2>
 
    </div>
  
  
}
</div>
</div>