@model Ballerz.Football.Ballerz.Web.Models.ClubPersonHistory.AddClubPersonHistoryModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>ClubPersonHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClubPersonHistory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <div class="col-md-10">
                        <label>Person: </label>&nbsp;<select asp-for="ClubPersonId" asp-items="@Model.ClubPersonList"></select>
                    </div>
                <span asp-validation-for="ClubPersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <div class="col-md-10">
                        <label>Club: </label>&nbsp;<select asp-for="ClubName" asp-items="@Model.ClubList"></select>
                    </div>
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <div class="col-md-10">
                        <label>Season </label>&nbsp;<select asp-for="Season" asp-items="@Model.SeasonList"></select>
                    </div>
                <span asp-validation-for="Season" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                        <label>Competition Competed In </label>&nbsp;<select asp-for="CompName" asp-items="@Model.CompList"></select>
                    </div>
                <span asp-validation-for="CompName" class="text-danger"></span>
            </div>
                 <div class="form-group">
                <label asp-for="Games" class="control-label"></label>
                <input asp-for="Games" class="form-control" />
                <span asp-validation-for="Games" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RedCards" class="control-label"></label>
                <input asp-for="RedCards" class="form-control" />
                <span asp-validation-for="RedCards" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YellowCards" class="control-label"></label>
                <input asp-for="YellowCards" class="form-control" />
                <span asp-validation-for="YellowCards" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goals" class="control-label"></label>
                <input asp-for="Goals" class="form-control" />
                <span asp-validation-for="Goals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
