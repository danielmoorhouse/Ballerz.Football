@model Ballerz.Football.Ballerz.Web.Models.Stadiums.AddStadiumModel



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Stadium</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStadium" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StadiumName" class="control-label"></label>
                <input asp-for="StadiumName" class="form-control" />
                <span asp-validation-for="StadiumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label>Upload Stadium Image</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input asp-for="StadiumImage" typeof="file" style="display: none">
                    </label>
            </div>
                            <div class="form-group">
                   
                    <div class="col-md-10">
                        <label>Resides In </label>&nbsp;<select asp-for="CountryId" asp-items="@Model.CountryList"></select>
                    </div>
                </div>
                           <div class="form-group">
                   
                    <div class="col-md-10">
                        <label>Home Team </label>&nbsp;<select asp-for="ClubId" asp-items="@Model.ClubList"></select>
                    </div>
                </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address1" class="control-label"></label>
                <input asp-for="Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="control-label"></label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostCode" class="control-label"></label>
                <input asp-for="PostCode" class="form-control" />
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
