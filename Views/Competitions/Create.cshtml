@model Ballerz.Football.Ballerz.Web.Models.Competitions.AddCompetitionModel

<!-- @{
    Layout = null;
} -->

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Competitions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Country Played In </label>&nbsp;<select asp-for="CountryId" asp-items="@Model.CountryList"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label>Competition Type </label>&nbsp;<select asp-for="CompTypeId" asp-items="@Model.CompTypeList"></select>
                <span asp-validation-for="CompTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompName" class="control-label"></label>
                <input asp-for="CompName" class="form-control" />
                <span asp-validation-for="CompName" class="text-danger"></span>
            </div>
             <div id="upload">
                    <label style="">Upload Competition Image</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input asp-for="CompImg1" typeof="file" style="display: none">
                    </label>
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
